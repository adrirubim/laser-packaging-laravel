APP_NAME="Laser Packaging"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=your_database_name
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Legacy Database Connection (for data migration)
LEGACY_DB_DRIVER=pgsql
LEGACY_DB_HOST=127.0.0.1
LEGACY_DB_PORT=5432
LEGACY_DB_DATABASE=your_legacy_database_name
LEGACY_DB_USERNAME=your_legacy_db_user
LEGACY_DB_PASSWORD=your_legacy_db_password
LEGACY_DB_CHARSET=utf8
LEGACY_DB_SSLMODE=prefer

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# PDF Configuration (sustituir por los valores reales en .env)
PDF_COMPANY_NAME="Your Company Name"
PDF_COMPANY_LOGO="/logo.svg"
PDF_COMPANY_ADDRESS="Your address"
PDF_COMPANY_PHONE="Your phone"
PDF_COMPANY_EMAIL="contact@example.com"
PDF_COMPANY_WEBSITE="https://example.com"
PDF_STYLE=color
PDF_COLOR_PRIMARY="#2c3e50"
PDF_COLOR_SECONDARY="#3498db"
PDF_COLOR_ACCENT="#ecf0f1"
PDF_COLOR_TEXT="#333333"
PDF_COLOR_TEXT_LIGHT="#7f8c8d"

# wkhtmltopdf path for PDF generation (optional, defaults to 'wkhtmltopdf')
# Common paths: '/usr/bin/wkhtmltopdf', '/usr/local/bin/wkhtmltopdf', or 'wkhtmltopdf'
# WKHTMLTOPDF_PATH=wkhtmltopdf
